{
	"compileOnSave": false,
	"ts-node": {
		"transpileOnly": true,
		"require": [
			"typescript-transform-paths/register"
		]
	},
	"compilerOptions": {
		"plugins": [
			{
				"transform": "typescript-transform-paths",
				"exclude": [
					"**/node_modules/**"
				]
			},
			{
				"transform": "typescript-transform-paths",
				"afterDeclarations": true,
				"exclude": [
					"**/node_modules/**"
				]
			}
		],
		"types": [
			"node",
			"jest"
		],
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"dom",
			"es6",
			"es2017",
			"esnext.asynciterable"
		],
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"rootDir": "./",
		"paths": {
			"@exam-cell-app": [
				"./src/app"
			],
			"@exam-cell-config": [
				"./src/config"
			],
			"@exam-cell-api/*": [
				"./src/api/*"
			],
			"@exam-cell-setup": [
				"./src/setup"
			],
			"@exam-cell-setup/*": [
				"./src/setup/*"
			],
			"@exam-cell-features/*": [
				"./src/features/*"
			],
			"@exam-cell-models/*": [
				"./src/models/*"
			],
			"@exam-cell-common/*": [
				"./src/common/*"
			],
			"@exam-cell-services/*": [
				"./src/services/*"
			],
			"@exam-cell-helpers/*": [
				"./src/helpers/*"
			],
			"@exam-cell-utils/*": [
				"./src/utils/*"
			],
			"@exam-cell-constants/*": [
				"./src/constants/*"
			],
			"@exam-cell-uploadSDK": [
				"./src/uploadSDK"
			],
			"@exam-cell-uploader": [
				"./src/uploader"
			],
			"@exam-cell-db/*": [
				"./src/databases/*"
			],
			"@exam-cell-middlewares/*": [
				"./src/middlewares/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*.ts",
		".",
		"gulpfile.ts",
		"knexfile.ts",
		"node.config.ts"
	]
}